---
// src/layouts/AdminAuthLayout.astro
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? `${title} - Admin` : 'Login Admin - WIDI Furniture'}</title>
    <meta name="description" content="Halaman login administrasi WIDI Furniture">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body>
    <div class="min-h-screen flex items-center justify-center bg-[var(--furniture-cream)] py-12 px-4 sm:px-6 lg:px-8">
      <div class="max-w-md w-full space-y-8 bg-white p-8 rounded-lg shadow-lg">
        <slot />
      </div>
    </div>
  </body>
</html>

<style>
  /* Gaya untuk form login admin */
  input[type="email"], input[type="password"] {
    appearance: none;
    border: 1px solid #d1d5db;
    border-radius: 0.375rem;
    padding: 0.5rem;
    width: 100%;
    font-size: 0.875rem;
    line-height: 1.25rem;
  }
  
  input:focus {
    outline: 2px solid transparent;
    outline-offset: 2px;
    border-color: var(--furniture-brown);
    box-shadow: 0 0 0 3px rgba(139, 69, 19, 0.1);
  }
  
  button {
    width: 100%;
    padding: 0.5rem;
    border: none;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    line-height: 1.25rem;
    font-weight: 500;
    color: white;
    background-color: var(--furniture-brown);
    cursor: pointer;
  }
  
  button:hover {
    background-color: var(--furniture-light-brown);
  }
</style>
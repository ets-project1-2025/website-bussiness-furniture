---
// src/layouts/AdminLayout.astro
import { getCurrentUser } from '../lib/auth';

let user = null;

try {
  user = await getCurrentUser();
} catch (error) {
  console.error('Error checking authentication:', error);
}

if (!user) {
  return Astro.redirect('/admin/login');
}
---


---
// src/pages/sitemap.xml.astro
import { SITE_URL } from '../config.ts';

// Define pages for sitemap
const pages = [
  { route: '/', lastmod: new Date().toISOString().split("T")[0] },
  { route: '/produk', lastmod: new Date().toISOString().split("T")[0] },
  { route: '/tentang', lastmod: new Date().toISOString().split("T")[0] },
  { route: '/kontak', lastmod: new Date().toISOString().split("T")[0] },
];

// In a full implementation, you would fetch your dynamic routes from your CMS/database
// For now, we'll create a static sitemap
const dynamicPages = []; // In a full implementation, you would fetch products and categories

const allPages = [...pages, ...dynamicPages];
---

<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {allPages.map(page => `
    <url>
      <loc>${SITE_URL}${page.route}</loc>
      <lastmod>${page.lastmod}</lastmod>
      <changefreq>weekly</changefreq>
      <priority>1.0</priority>
    </url>
  `).join('')}
</urlset>
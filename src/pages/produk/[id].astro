      <div>
        <div class="bg-gray-100 rounded-lg p-4 mb-4 flex items-center justify-center h-96">
          {product.product_images && product.product_images.length > 0 ? (
            <img 
              src={product.product_images[0]?.image_url || '/images/placeholder-product.jpg'} 
              alt={product.name} 
              class="w-full h-full object-contain"
            />
          ) : (
            <div class="w-full h-full flex items-center justify-center bg-gray-200">
              <span class="text-gray-500">Gambar tidak tersedia</span>
            </div>
          )}
        </div>
        
        <!-- Thumbnail Gambar -->
        <div class="grid grid-cols-4 gap-4">
          {product.product_images && product.product_images.map((image, index) => (
            <div key={index} class="bg-gray-100 rounded-lg p-2 flex items-center justify-center h-24 cursor-pointer border-2 border-transparent hover:border-[var(--furniture-brown)]">
              <img 
                src={image.image_url || '/images/placeholder-product.jpg'} 

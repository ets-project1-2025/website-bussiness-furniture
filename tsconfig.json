{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "types": ["astro/client"],
    "baseUrl": ".",
    "paths": {
      "next/link": ["src/lib/nextjs-shim/link"],
      "next/image": ["src/lib/nextjs-shim/image"],
      "next/head": ["src/lib/nextjs-shim/head"],
      "next/router": ["src/lib/nextjs-shim/router"],
      "next/*": ["src/lib/nextjs-shim/*"],
      "contexts/*": ["src/contexts/*"],
      "reducers/*": ["src/reducers/*"],
      "lib/*": ["src/lib/*"],
      "components/*": ["src/components/*"],
      "styles/*": ["src/styles/*"],
      "interfaces/*": ["src/lib/interfaces/*"]
    }
  },
  "include": ["src", "astro.config.*.ts"],
  "exclude": ["node_modules", "dist"]
}